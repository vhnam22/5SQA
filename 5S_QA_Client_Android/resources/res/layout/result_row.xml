<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/panelResultRow" android:background="@drawable/bg_rowselect" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textColor="#000" android:gravity="center" android:id="@+id/lblNo" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="40dp" android:layout_height="match_parent" android:text="No"/>
    <TextView android:textColor="#000" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/lblMeasurement" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="Dim" android:layout_weight="2"/>
    <TextView android:textColor="#000" android:gravity="center" android:id="@+id/lblSample" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="Sp" android:layout_weight="0.9"/>
    <TextView android:textColor="#000" android:gravity="center" android:id="@+id/lblImportant" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="Imp." android:layout_weight="1"/>
    <TextView android:textColor="#000" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/lblNominal" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="Nominal" android:layout_weight="1.5"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/panelTolerance" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.8">
        <TextView android:textSize="10dp" android:textColor="#000" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/lblUpper" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Upper"/>
        <TextView android:textSize="10dp" android:textColor="#000" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/lblLower" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Lower"/>
    </LinearLayout>
    <TextView android:textColor="#000" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/lblLSL" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="LSL" android:layout_weight="1.5"/>
    <TextView android:textColor="#000" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/lblUSL" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="USL" android:layout_weight="1.5"/>
    <TextView android:textColor="#000" android:gravity="center" android:id="@+id/lblUnit" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="Unit" android:layout_weight="1"/>
    <TextView android:textColor="#000" android:gravity="center" android:id="@+id/lblMachineType" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="Mac. type" android:layout_weight="2"/>
    <TextView android:textColor="#000" android:gravity="center" android:id="@+id/lblCavity" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="Cavity" android:layout_weight="1"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/panelResult" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.7">
        <Button android:textColor="#fff" android:layout_gravity="center" android:id="@+id/btnHistory" android:background="@drawable/btn_history" android:layout_width="30dp" android:layout_height="30dp"/>
        <TextView android:textColor="#000" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/lblResult" android:padding="3dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Result"/>
    </LinearLayout>
    <TextView android:textColor="#000" android:gravity="center" android:id="@+id/lblJudge" android:background="@drawable/text_white" android:padding="3dp" android:layout_width="50dp" android:layout_height="match_parent" android:text="Judge"/>
</LinearLayout>
