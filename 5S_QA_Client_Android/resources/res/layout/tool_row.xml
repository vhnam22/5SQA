<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/bg_opendialog" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#fff" android:background="@drawable/new_login_gradient" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="Machine"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="2dp">
        <TextView android:textStyle="bold" android:textColor="#fff" android:gravity="center" android:layout_gravity="center_vertical" android:background="@drawable/text_title_tool" android:padding="5dp" android:layout_width="40dp" android:layout_height="match_parent" android:text="NO"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/text_title_tool" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textStyle="bold" android:textColor="#fff" android:gravity="center" android:layout_gravity="center_vertical" android:padding="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="NAME" android:layout_weight="1"/>
            <Button android:textColor="@android:color/transparent" android:id="@+id/btnSortName" android:background="@drawable/button_sortdown" android:layout_width="20dp" android:layout_height="20dp" android:text="D"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/text_title_tool" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textStyle="bold" android:textColor="#fff" android:gravity="center" android:layout_gravity="center_vertical" android:padding="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="TYPE" android:layout_weight="1"/>
            <Button android:textColor="@android:color/transparent" android:id="@+id/btnSortType" android:background="@drawable/button_sortdown" android:layout_width="20dp" android:layout_height="20dp" android:text="D"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcvMachine" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
