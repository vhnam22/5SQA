<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/new_login_gradient" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="10">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="24dp" android:textStyle="bold" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/lblTabletName" android:background="@drawable/bg_white" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="..."/>
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <Button android:layout_gravity="end" android:id="@+id/btnSetting" android:background="@drawable/btn_setting" android:layout_width="50dp" android:layout_height="50dp"/>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="10">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <EditText android:textColor="#fff" android:textColorHint="?attr/colorButtonNormal" android:id="@+id/txtUsername" android:background="@android:color/transparent" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:hint="Username" android:maxLines="1" android:ems="10" android:drawableLeft="@drawable/ic_account_circle_black_24dp" android:drawablePadding="12dp" android:inputType="textPersonName"/>
            <View android:background="#fff" android:layout_width="match_parent" android:layout_height="1dp"/>
            <EditText android:textColor="#fff" android:textColorHint="?attr/colorButtonNormal" android:id="@+id/txtPassword" android:background="@android:color/transparent" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="Password" android:maxLines="1" android:ems="10" android:drawableLeft="@drawable/ic_lock_black_24dp" android:drawablePadding="12dp" android:inputType="textPassword"/>
            <View android:background="#fff" android:layout_width="match_parent" android:layout_height="1dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="10">
                    <CheckBox android:textSize="18dp" android:textColor="#fff" android:id="@+id/cbRemember" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Remember" android:buttonTint="#fff"/>
                    <Button android:textSize="20dp" android:textStyle="bold" android:textColor="#f16f7d" android:id="@+id/btnLogin" android:background="@drawable/btn_login" android:padding="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Login"/>
                </LinearLayout>
                <Button android:layout_gravity="center" android:id="@+id/btnQRScan" android:background="@drawable/btn_qrcode" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <ImageView android:layout_gravity="center" android:background="@mipmap/ic_launcher_foreground_aatechnology" android:layout_width="300dp" android:layout_height="300dp" android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="10">
        <TextView android:textStyle="bold" android:textColor="#fff" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Copyright @2020 By A&amp;A Technology" android:layout_weight="7"/>
        <TextView android:textStyle="normal|bold|italic" android:textColor="#fff" android:gravity="center" android:id="@+id/lblIME" android:layout_width="0dp" android:layout_height="wrap_content" android:text="IME" android:layout_weight="3"/>
        <TextView android:textStyle="normal|bold|italic" android:textColor="#fff" android:gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="v3.0.1"/>
    </LinearLayout>
</LinearLayout>
