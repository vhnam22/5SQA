<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@drawable/bg_rowselect" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textColor="#000" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/lblNo" android:background="@drawable/text_white" android:padding="5dp" android:layout_width="40dp" android:layout_height="match_parent" android:text="No"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/layoutName" android:background="@drawable/text_white" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="5">
        <TextView android:textColor="#000" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/lblName" android:padding="3dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Request name" android:layout_weight="5"/>
        <Button android:textStyle="bold" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/btnDetail" android:background="@drawable/btn_infomation" android:layout_width="45dp" android:layout_height="45dp" android:layout_margin="3dp"/>
        <Button android:textStyle="bold" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/btnComment" android:background="@drawable/background_btnsearch" android:layout_width="45dp" android:layout_height="45dp" android:layout_margin="3dp" android:text="C"/>
        <Button android:textStyle="bold" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/btnResult" android:background="@drawable/btn_new" android:layout_width="45dp" android:layout_height="45dp" android:layout_margin="3dp" android:text="R"/>
    </LinearLayout>
</LinearLayout>
